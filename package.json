    "twilio": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^2.0.16",
    "supertest": "^7.1.3",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "vitest": "^4.0.16"
